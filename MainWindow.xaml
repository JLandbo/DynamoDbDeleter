<Window x:Class="DynamoDbDeleter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DynamoDbDeleter"
        Title="DynamoDB Entity Deleter" Height="735" Width="1034"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <local:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="0,0,0,2"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Left" Width="385">
            <TextBlock Text="AWS Credentials" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
            
            <Label Content="Access Key ID"/>
            <TextBox Text="{Binding AccessKeyId, UpdateSourceTrigger=PropertyChanged}"/>
            
            <Label Content="Secret Access Key"/>
            <PasswordBox x:Name="SecretAccessKeyBox" PasswordChanged="SecretAccessKeyBox_PasswordChanged"/>
            
            <Label Content="Region (e.g., eu-west-1)"/>
            <TextBox Text="{Binding Region, UpdateSourceTrigger=PropertyChanged}"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                <Button Content="Connect" Command="{Binding ConnectCommand}" 
                        IsEnabled="{Binding IsConnecting, Converter={StaticResource InverseBoolConverter}}"
                        Padding="10,5" Margin="0,0,10,0"/>
                <Ellipse Width="12" Height="12" VerticalAlignment="Center" Margin="0,0,5,0">
                    <Ellipse.Style>
                        <Style TargetType="Ellipse">
                            <Setter Property="Fill" Value="Gray"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                    <Setter Property="Fill" Value="Green"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Ellipse.Style>
                </Ellipse>
                <TextBlock Text="{Binding ConnectionStatus}" VerticalAlignment="Center" FontSize="11"/>
            </StackPanel>
            
            <TextBlock Text="Table &amp; Key" FontWeight="Bold" FontSize="14" Margin="0,10,0,10"/>
            
            <Label Content="Table Name"/>
            <TextBox Text="{Binding TableName, UpdateSourceTrigger=PropertyChanged}"/>
            
            <Label Content="PK Attribute Name*"/>
            <TextBox Text="{Binding PkAttributeName, UpdateSourceTrigger=PropertyChanged}"/>
            
            <Label Content="PK Value (optional)"/>
            <TextBox Text="{Binding PkValue, UpdateSourceTrigger=PropertyChanged}"/>
            
            <Label Content="SK Attribute Name*"/>
            <TextBox Text="{Binding SkAttributeName, UpdateSourceTrigger=PropertyChanged}"/>
            
            <Label Content="SK Value (optional)"/>
            <TextBox Text="{Binding SkValue, UpdateSourceTrigger=PropertyChanged}"/>

            <CheckBox Content="Scan mode (begins_with on PK/SK)" 
                      IsChecked="{Binding UseScanMode}" 
                      IsEnabled="{Binding UseContainsMode, Converter={StaticResource InverseBoolConverter}}"
                      Margin="0,10,0,0"/>
            <CheckBox Content="Contains mode (substring match - slowest)" 
                      IsChecked="{Binding UseContainsMode}" 
                      IsEnabled="{Binding UseScanMode, Converter={StaticResource InverseBoolConverter}}"
                      Margin="0,5,0,0"/>

            <Button Content="Delete" Command="{Binding DeleteCommand}" 
                    IsEnabled="{Binding IsDeleting, Converter={StaticResource InverseBoolConverter}}"
                    Margin="0,15,0,10" Padding="10,8" FontWeight="Bold"/>
        </StackPanel>
        <StackPanel Margin="404,0,0,0">
            <TextBox x:Name="LogBox" Text="{Binding LogText, Mode=OneWay}" 
                     IsReadOnly="True" Height="652" 
                     VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"
                     FontFamily="Consolas" FontSize="11"/>
        </StackPanel>
    </Grid>
</Window>
